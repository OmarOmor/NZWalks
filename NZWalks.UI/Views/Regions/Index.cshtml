@model IEnumerable<NZWalks.UI.Models.DTOs.RegionDTO>

<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th class="fw-bold">Id</th>
            <th class="fw-bold">Code</th>
            <th class="fw-bold">Name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach(var walk in Model)
        {
            <tr>
                <td>@walk.Id</td>
                <td>@walk.Code</td>
                <td>@walk.Name</td>
                <td>
                    <a asp-controller="Regions" asp-action="Edit" class="btn btn-light" asp-route-id="@walk.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>